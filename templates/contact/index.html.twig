{% extends 'base.html.twig' %}

{% block title %}
	Contact
{% endblock %}

{% block body %}
	<div class="container">
		<style>
			.example-wrapper {
				margin: 1em auto;
				max-width: 800px;
				width: 95%;
				font: 18px / 1.5 sans-serif;
			}
			.example-wrapper code {
				background: #F5F5F5;
				padding: 2px 6px;
			}
		</style>

		<div class="example-wrapper">
			<h1>Contact Us
			</div>
			<div>
				{{form(form)}}
				</div>
			</div>
			{% for messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-success mt-4">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}
		{% endblock %}
